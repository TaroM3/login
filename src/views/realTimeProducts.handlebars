<h1>Register a Product -</h1>

<form action="" method="">
        Title: <input type="text" name="title" id="titleAdd"><br>
        Description: <input type="text" name="description" id="descriptionAdd"><br>
        Code: <input type="text" name="code" id="codeAdd"><br>
        Price: <input type="number" name="price" id="priceAdd"><br>
        Status: <input type="text" name="status" id="statusAdd"><br>
        Stock: <input type="number" name="stock" id="stockAdd"><br>
        Category: <input type="text" name="category" id="categoryAdd"><br>
        Thumbnails: <input type="text" name="thumbnails" id="thumbnailsAdd"><br>
        <input type="submit" id="addProduct">
</form>

<h1>Delete a Product</h1>
<form method="delete" id="deleteForm">
        Enter the Product Id: <input type="text" name="id" id="idDelete"><br>
        <input type="submit" value="Delete" id="btn-deleteProduct">
</form>


<div id="container">
    {{#each product}}
        <div id={{this._id}}>
            <h2>
                Id: <i id="id">{{this._id}}</i>
            </h2>
            <h2>
                Product: <i id="title">{{this.title}}</i>
            </h2>
            <p>
                Description: <i id="description">{{this.description}}</i>
            </p>
            <p>
                Code: <i id="code">{{this.code}}</i>
            </p>
            <p>
                Price: <i id="price">{{this.price}}</i>
            </p>
            <p>
                Stock: <i id="stock">{{this.stock}}</i>
            </p>
            <p>
                Category: <i id="category">{{this.category}}</i>
            </p>
            <p>
                {{#each this.thumbnails}}
                    <img src={{this}} alt="" id="thumbnails">
                {{/each}}
            </p>
        </div>
    {{/each}}
</div>
<script src="/socket.io/socket.io.js" type="text/javascript"></script>
<script src="js/realTimeProducts.io.js"></script>